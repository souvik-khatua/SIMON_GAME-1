<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
    <div class="container">
      <a class="navbar-brand" href="/">Railway Tracker</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link <%= activeTab === 'home' ? 'active' : '' %>" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= activeTab === 'stations' ? 'active' : '' %>" href="/stations">Stations</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= activeTab === 'journey' ? 'active' : '' %>" href="/stations/journey">Journey Tracker</a>
          </li>
          <li class="nav-item">
            <a class="nav-link <%= activeTab === 'about' ? 'active' : '' %>" href="/about">About</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container my-4">
    <h1 class="mb-4">Railway Stations</h1>
    
    <div class="row">
      <div class="col-lg-8">
        <div class="card mb-4">
          <div class="card-header bg-primary text-white">
            <h5 class="mb-0">All Stations</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Code</th>
                    <th>Next Station</th>
                  </tr>
                </thead>
                <tbody>
                  <% stations.forEach(station => { %>
                    <tr>
                      <td><%= station.id %></td>
                      <td><%= station.name %></td>
                      <td><span class="badge bg-secondary"><%= station.code %></span></td>
                      <td>
                        <% if (station.next) { %>
                          <%= stations.find(s => s.id === station.next).name %>
                        <% } else { %>
                          <span class="text-muted">Terminal</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
      
      <div class="col-lg-4">
        <div class="card">
          <div class="card-header bg-success text-white">
            <h5 class="mb-0">Start Journey</h5>
          </div>
          <div class="card-body">
            <p>Ready to travel? Start tracking your journey now!</p>
            <a href="/stations/journey" class="btn btn-success w-100">Track Journey</a>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-light py-3 mt-5">
    <div class="container text-center">
      <p class="mb-0">&copy; <%= new Date().getFullYear() %> Railway Tracker. All rights reserved.</p>
    </div>
  </footer>

  <!-- Bootstrap JS with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Custom JS -->
  <script src="/js/main.js"></script>
</body>
</html> 